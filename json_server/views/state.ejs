<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>Validation Results</title>
  <meta http-equiv="refresh" content="2">
  <link rel="stylesheet" href="/state.css"> <!-- NEW: external CSS -->
</head>
<body>
  <h1>Validation Results</h1>
  <div class="meta">
    Records: <%= count %> —
    <a href="/state">View JSON</a> —
    <a href="/state/html">Refresh</a>
    <button class="btn" id="clearBtn" onclick="clearState()">Clear State</button>
  </div>

  <table>
    <thead>
      <tr><th>Timestamp</th><th>BeaconId</th><th>Status</th><th>Errors</th></tr>
    </thead>
    <tbody>
      <% if (!records || records.length === 0) { %>
        <tr><td colspan="4"><em>No records yet</em></td></tr>
      <% } else { %>
        <% records.forEach(function(r) { const valid = r.ValidationStatus === "Valid"; %>
          <tr class="<%= valid ? "valid" : "invalid" %>">
            <td><%= r.timestamp %></td>
            <td><%= r.BeaconId %></td>
            <td><%= r.ValidationStatus %></td>
            <td>
              <% if (r.formattedErrorList && r.formattedErrorList.length) { %>
                <ul>
                  <% r.formattedErrorList.forEach(function(e){ %>
                    <li><%= e %></li>
                  <% }); %>
                </ul>
              <% } %>
            </td>
          </tr>
        <% }); %>
      <% } %>
    </tbody>
  </table>

  <script>
    async function clearState() {
      if (!confirm('Clear all records?')) return;
      try {
        const resp = await fetch('/state', { method: 'DELETE' });
        if (resp.ok) location.reload();
        else alert('Failed to clear state: ' + await resp.text());
      } catch (e) {
        alert('Failed to clear state: ' + e);
      }
    }
  </script>
</body>
</html>
